	~/dmenu-scripts/dmenu-power.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu config
c 
	~/dmenu-scripts/dmenu-dots.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu wal
w 
	/home/gabriel/dmenu-scripts/dmenu-wal.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu record screenshare
r 
	~/dmenu-scripts/dmenu-record.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu goto to window (bspwm)
