	~/dmenu-scripts/dmenu-bspwm-goto-window.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu read book with zathura
b
	~/dmenu-scripts/dmenu-books.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu select soundcard
a
	~/dmenu-scripts/dmenu-soundcard.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu screenshot
Print
	~/dmenu-scripts/dmenu-screenshot.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu emacs submenu
e
	@enter dmenu_emacs_menu && echo -n "dmenu_emacs" > ~/.config/waybar/swhkd-mode
# dmenu notes
n
	~/dmenu-scripts/dmenu-notes.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode

# Dmenu Emacs submenu
mode dmenu_emacs_menu swallow oneoff

# dmenu emacs open project
p 
	~/dmenu-scripts/dmenu-emacs-project.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu manage emacs
m
	~/dmenu-scripts/dmenu-emacs-manage.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode

# Open menu mode
mode open_menu swallow oneoff

# emacsclient
e 
	emacsclient -a '' -c && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# firefox
f
	firefox && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# rmpc
m
	st -e bash -c 'cat ~/.cache/wal/sequences && rmpc' && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode

# Dirvish menu mode
mode dirvish_menu swallow oneoff

# dirvish wallpapers
w 
	emacsclient -c -e "(dirvish \"~/Pictures/wallpapers/\")" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dirvish documents
d 
	emacsclient -c -e "(dirvish \"~/Documents/\")" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dirvish pictures
p 
	emacsclient -c -e "(dirvish \"~/Pictures/\")" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dirvish books
b 
	emacsclient -c -e "(dirvish \"~/Documents/books\")" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dirvish videos
v
	emacsclient -c -e "(dirvish \"~/Videos\")" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode
