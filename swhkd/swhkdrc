# make sxhkd reload its configuration files:
Super + escape
	pkexec pkill -USR1 -x swhkd

# Enter main menu mode
super + space
	@enter main_menu && echo -n "main_menu" > ~/.config/waybar/swhkd-mode

mode main_menu swallow

# Emacs submenu
e
	@enter emacs_menu && echo -n "emacs" > ~/.config/waybar/swhkd-mode
# Dmenu submenu  
d
	@enter dmenu_menu && echo -n "dmenu" > ~/.config/waybar/swhkd-mode
# Open submenu
o
	@enter open_menu && echo -n "open" > ~/.config/waybar/swhkd-mode
# Dirvish submenu
y
	@enter dirvish_menu && echo -n "dirvish" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode

# Emacs menu mode
mode emacs_menu swallow oneoff

# emacs org agenda
a
	emacsclient -r -e "(org-agenda-list)" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# emacs open calendar
c
	emacsclient -r -e "(=calendar)" && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

Escape
	@escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode

endmode

# Dmenu menu mode
mode dmenu_menu swallow oneoff

# dmenu todo
t
	~/dmenu-scripts/dmenu-todo.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
# dmenu yt-dlp
y
	~/dmenu-scripts/dmenu-ytdlp.sh && @escape && @escape  && echo -n "normal" > ~/.config/waybar/swhkd-mode
